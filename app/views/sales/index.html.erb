<table>
  <thead>
    <tr>
      <th>Purchaser name</th>
      <th>Item description</th>
      <th>Item price</th>
      <th>Purchase count</th>
      <th>Merchant address</th>
      <th>Merchant name</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.purchaser_name %></td>
        <td><%= sale.item_description %></td>
        <td><%= sale.item_price %></td>
        <td><%= sale.purchase_count %></td>
        <td><%= sale.merchant_address %></td>
        <td><%= sale.merchant_name %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="5"><strong>Total:</strong></td>
      <td><strong><%= number_to_currency @total, unit: 'R$', separator: ',', delimiter: '' %></strong></td>
    </tr>
  </tfoot>
</table>

<%= link_to 'Fazer upload de arquivo', new_sale_path %>
